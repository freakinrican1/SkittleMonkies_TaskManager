<h2>New Task</h2>


<%= form_for @task do |f| %>

	<%= f.label :task_name %>
	<%= f.text_field :task_name %>

	<%= f.label :status %>
	<%= f.text_field :status %>

	<%= f.label :description %>
	<%= f.text_area :description %>
	
	<%= select_tag 'project_id', options_for_select(@projects.map{|project| ["#{project.title}", project.id] }) %>
	<%= select_tag 'category_id', options_for_select(@categories.map{|category| ["#{category.name}", category.id] }) %>

	<%= f.submit %>

<% end %>



  
